		<file name="core/media.js"/>
		<file name="core/network.js"/>
		<file name="core/notification.js"/>
		<file name="core/orientation.js"/>
		<file name="core/sms.js"/>
		<file name="core/telephony.js"/>
		<file name="component/attachment.js"/>
		<file name="component/portal.js"/>
		<file name="component/utils.js"/>
